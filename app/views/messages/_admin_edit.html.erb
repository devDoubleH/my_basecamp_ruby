<% if messages.length > 0 %>
  <h3 class="centered mt-3">Messages</h3>
  <div class="admin_edit_messages overflow-auto">
    <% messages.each do |message| %>
      <div class="row message">
        <div class="col-1">
          <%= svg 'chat' %>
        </div>
        <div class="col">
          <p class="font-weight-bold text-secondary"><%= message.author %>
          </p>
          <p><%= message.text %></p>
        </div>
        <div class="col-auto align-self-center">
          <%= link_to project_topic_message_path(@project, message.topic_id, message), data: { confirm: "Are you sure you want to delete this message?" }, method: :delete, class: "btn btn-danger" do %>
            <%= svg 'delete' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
