<main>
  <div class="container form">
    <div class="row h-100 justify-content-center">
      <div class="col-6 mt-5">
          <h2 class="centered">Edit Message</h2>
          <%= bootstrap_form_with(model: [@project, @topic, @message], local: true) do |form| %>
                <%= form.text_field :text, label_class: "text-muted" %>
                <div class="centered"><%= form.submit "Update Text", class: "btn btn-secondary" %></div>
          <% end %>
          <div class="centered my-3 fixed-bottom">
            <%= link_to project_path(@project), class: "btn btn-info mx-3" do %>
              <%= svg 'overview' %>
              Back to Project
            <% end %>
            <%= link_to project_topic_message_path(@project, @topic, @message, path: 'edit_message'),data: { confirm: "Are you sure you want to delete this message?" }, method: :delete, class: "btn btn-danger" do %>
              <%= svg 'delete' %>
              Delete Message
            <% end %>
          </div>
      </div>
    </div>
  </div>
</main>
