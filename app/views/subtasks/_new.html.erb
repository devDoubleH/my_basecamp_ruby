<%= bootstrap_form_for(subtask, url: project_task_subtasks_path(project, task)) do |f| %>
  <div class="row my-0">
    <div class="col pr-0">
      <p>Add new subtask</p>
      <%= f.text_field :title, require: true, hide_label: true %>
  </div>
    <div class="col-2 align-self-end update_btn"><%= f.primary "Add".html_safe, render_as_button: true, class:  'btn btn-warning'%></div>
  </div>
  <% flash.each do |type, msg| %>
    <% if type == 'alert' %>
    <span class="small text-danger"><%= msg %></span>
    <% end %>
  <% end %>
<% end %>
