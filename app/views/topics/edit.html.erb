<main>
  <div class="container form">
    <div class="row h-100 justify-content-center">
      <div class="col-9 mt-5">
          <h2 class="centered">Edit Topic</h2>
          <%= bootstrap_form_with(model: [@project, @topic], local: true) do |form| %>
              <div class="row">
                <div class="col-8"><%= form.text_field :title, label_class: "text-muted" %></div>
                <div class="col-4 align-self-end update_btn"><%= form.submit "Update Title", class: "btn btn-secondary" %></div>
              </div>
          <% end %>
          <%= render :partial => 'messages/admin_edit', :locals => { :project => @project, :topic => @topic, :messages => @topic.messages }%>
      </div>
    </div>
  </div>
</main>
<nav class="navbar  navbar-light px-4 fixed-bottom justify-content-center">
  <ul class="nav align-items-center">
      <li class="nav-item">
        <%= link_to project_path(@project), class: "btn btn-info mx-3" do %>
          <%= svg 'overview' %>
          Back to Project
        <% end %>
      </li>
      <li class="nav-item ml-3">
        <%= link_to project_topic_path(@project, @topic),data: { confirm: "Are you sure you want to delete this topic?" }, method: :delete, class: "text-muted mx-3" do %>
          <%= svg 'delete' %>
          Delete Topic
        <% end %>
      </li>
  </ul>
</nav>
